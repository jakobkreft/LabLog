<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the corner radius for rounded corners -->
    <corners android:radius="40dp" />

    <!-- Define the background color of the shape -->
    <solid android:color="#58555555" /> <!-- Replace with your desired color -->

    <!-- Optionally, define a border around the shape -->
    <stroke
        android:width="0dp"
        android:color="#00555555" /> <!-- Replace with your desired border color -->
</shape>
